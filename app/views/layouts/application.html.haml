!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Ecuadorsolidario App'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ecuadorsolidario App'}"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
    .container
      = render 'layouts/messages'
    = yield
