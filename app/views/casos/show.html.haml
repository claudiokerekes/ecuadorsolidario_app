.container
  .col-md-8
    %p#notice= notice
    .small
      %i.fa.fa-map-marker
      = @caso.ubicacion
      |
      = @caso.user.name || 'Nombre no introducido'
    %h1
      = @caso.titulo
    %p.lead
      = @caso.problema
    %p
    -if current_user && current_user.id == @caso.user.id
      = link_to 'Editar', edit_caso_path(@caso)
    = link_to 'Ver todos', casos_path, class: 'btn btn-default'
  .col-md-4
    %br
    %br
    %br
    .well
      - @caso.recursos.each do |recurso|
        = recurso.conseguidos
        de
        = recurso.objetivo
        = recurso.nombre
        .progress
          .progress-bar{"aria-valuemax" => "#{recurso.objetivo}", "aria-valuemin" => "0", "aria-valuenow" => "#{recurso.conseguidos}", :role => "progressbar", :style => "width:#{recurso.conseguidos*100/recurso.objetivo}%"}
            .small= recurso.conseguidos*100/recurso.objetivo
            %span %
  .col-md-12
    .panel
      .panel-body
        %h2
          Para ayudar contacta con
          = @caso.user.name || 'Nombre no introducido'
          = link_to @caso.user.email, "mailto:#{@caso.user.email}"
